<%= stylesheet_link_tag "login", :media => "all" %>

<div class="container">
  <div class="form-signin">
    <h2 class="form-signin-heading">Forgot your password?</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, :required => true, :autofocus => true, :class => "form-control" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", :class => "btn btn-lg btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>